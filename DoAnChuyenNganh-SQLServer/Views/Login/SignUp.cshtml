
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <!-- signup__area start -->
    <section class="signup__area po-rel-z1 pt-100 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-xxl-6 offset-xxl-3 col-xl-6 offset-xl-3 col-lg-8 offset-lg-2">
                    <div class="sign__wrapper white-bg">
                        @*<div class="sign__header mb-35">
                                <div class="sign__in text-center">
                                    <a href="#" class="sign__social g-plus text-start mb-15"><i class="fab fa-google-plus-g"></i>Sign Up with Google</a>
                                    <p> <span>........</span> Or, <a href="sign-up.html">sign up</a> with your email<span> ........</span> </p>
                                </div>
                            </div>*@
                        <div class="sign__form">
                            <form>
                                <div class="sign__input-wrapper mb-25">
                                    <h5>Full Name</h5>
                                    <div class="sign__input">
                                        <input type="text" id="FullName" required placeholder="Full name">
                                        <i class="fal fa-user"></i>
                                    </div>
                                </div>
                                <div class="sign__input-wrapper mb-25">
                                    <h5>Work email</h5>
                                    <div class="sign__input">
                                        <input type="email" id="Email" required placeholder="e-mail address">
                                        <i class="fal fa-envelope"></i>
                                    </div>
                                </div>
                                <div class="sign__input-wrapper mb-25">
                                    <h5>Password</h5>
                                    <div class="sign__input">
                                        <input type="password" id="Password" required placeholder="Password" minlength="8">
                                        <i class="fal fa-lock"></i>
                                    </div>
                                </div>
                                <div class="sign__input-wrapper mb-10">
                                    <h5>Re-Password</h5>
                                    <div class="sign__input">
                                        <input type="password" id="RePassword" required placeholder="Re-Password" minlength="8">
                                        <i class="fal fa-lock"></i>
                                    </div>
                                </div>
                                <div class="sign__action d-flex justify-content-between mb-30">
                                    <div class="sign__agree d-flex align-items-center">
                                        <input class="m-check-input" type="checkbox" id="m-agree">
                                        <label class="m-check-label" for="m-agree">
                                            I agree to the <a href="#">Terms &amp; Conditions</a>
                                        </label>
                                    </div>
                                </div>
                                <button class="btn-tp w-100" id="btn_signUp"> <span></span> Sign Up</button>
                                <div class="sign__new text-center mt-20">
                                    <p>Already in Markit ? <a href="~/login"> Sign In</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- signup__area end -->

</main>

@section Footer{
    <script>
        $(document).ready(function () {
            $("#btn_signUp").click(function (e) {
                var data = {
                    DisplayName: $("#FullName").val(),
                    Email: $("#Email").val(),
                    Password: $("#Password").val(),
                    RePassword: $("#RePassword").val()
                };
                if ($("#Password").val() != $("#RePassword").val()) {
                    alert("RePassword must be the same as Password");
                } else {
                    $.ajax({
                        url: "/login/signupform",
                        type: "POST",
                        data: {cu: data},
                        success: function (response) {
                            console.log(response);
                            if (response.erorr == null) {
                                alert(response.success);
                                window.location.href = response.url;
                            }
                            else {
                                alert(response.erorr);
                            }
                        }
                    });
                }
               e.preventDefault();
            });
            })
    </script>
}
}
