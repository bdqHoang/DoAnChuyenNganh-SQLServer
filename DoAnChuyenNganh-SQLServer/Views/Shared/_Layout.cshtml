                $("#countItemCart").text(data.total);
                var total = 0;
                if (data.total != 0) {
                    var str = ``;
                    for (var i = 0; i < data.data.length; i++) {
                        var sellprice = data.data[i].SalePrice == null ? data.data[i].sellprice : data.data[i].SalePrice;
                        str+=`<li class="cartmini__item p-relative d-flex align-items-start">
                                    <div class="cartmini__thumb mr-15">
                                        <a href="product-details.html">
                                            ${ShowImg(data.data[i])}
                                        </a>
                                    </div>
                                    <div class="cartmini__content">
                                        <h3 class="cartmini__title">
                                            <a href="product-details.html">${data.data[i].DisplayName}</a>
                                        </h3>
                                        <span class="cartmini__price">
                                            <span class="price">${data.data[i].Quantity} × ${sellprice}VND</span>
                                        </span>
                                    </div>
                                    <a onclick="DeleteItemCart('${data.data[i].ProductID}','${data.data[i].ColorID}','${data.data[i].OptionID}')" class="cartmini__remove">
                                        <i class="fal fa-times"></i>
                                    </a>
                                </li>`
                        total += sellprice * data.data[i].Quantity;
                    }
                    $("#getItemCart").html(str);
                }
                $("#totalmodal").text(total + "VND");
                $("#testtotal").text(total + "VND");
                $("#totalPayment").text(total + "VND")
            }
        })
    }

    // delete item in cart
    function DeleteItemCart(productID,colorID,OptionID) {
        $.ajax({
            url: "/cart/deletecart",
            type: "Delete",
            data: {
                OptionID: OptionID,
                ColorID: colorID,
                ProductID: productID
            },
            success: function (data) {
                alert(data.message);
                $("#getItemCart").empty();
                $("#tableItemCart").empty();
                GetCart();
                TableCart();
            }
        })
    }


    // show img
    function ShowImg(data, style) {
        var img = ``;
        img = `<img src="data:image/gif;base64,${data.image}" ${style} alt="">`;
        if (data.image == null) {
            img = `<img src="/Assets/img/EmptyBox/Empty.png" ${style} alt="">`;
        }
        return img;
    }

</script>
